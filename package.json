{
  "name": "bot-lnk",
  "version": "1.0.0",
  "type": "module",
  "description": "Lords and Knights game automation bot",
  "main": "src/index.ts",
  "scripts": {
    "start": "npm run clean:logs && npx tsx src/index.ts",
    "start:keep-logs": "npx tsx src/index.ts",
    "clean:logs": "rm -rf ~/.bot-lnk-session/error-screenshots ~/.bot-lnk-session/debug-dumps && echo 'Cleaned logs'",
    "build": "tsc",
    "proto:generate": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=./src/generated --ts_proto_opt=outputServices=nice-grpc,outputServices=generic-definitions,useExactTypes=false,esModuleInterop=true proto/config.proto",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "playwright": "^1.57.0",
    "ts-proto": "^2.10.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.14.3",
    "@grpc/proto-loader": "^0.8.0",
    "dotenv": "^17.2.3",
    "nice-grpc": "^2.1.14",
    "nice-grpc-common": "^2.0.2"
  }
}
